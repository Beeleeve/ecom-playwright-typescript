{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",                      // Include DOM + modern JS APIs
    "module": "NodeNext",                        // Or "ESNext" if using ESM
    "moduleResolution": "NodeNext",               // Node-style resolution
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,                     // Allow default imports from CJS
    "skipLibCheck": true,
    "noEmit": true,
    /* Paths & Aliases (optional) */
    "baseUrl": ".",                              // Base for non-relative imports
    "paths": {
      "@pages/*": ["e2e/pages/*"],
      "@utils/*": ["e2e/utils/*"],
      "@config/*": ["e2e/config/*"],
      "@pwconfig": ["playwright.config.ts"]
    }
  },
  "include": ["e2e", "config", "tests", "playwright.config.ts", "**/*.ts", "**/*.tsx", "**/*.js", "**/*.mjs"],
  "exclude": ["node_modules", "dist"]
}